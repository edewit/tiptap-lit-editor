{
  "name": "tiptap-lit-editor",
  "version": "0.1.0",
  "description": "A TipTap-based rich text editor built with Lit components, featuring gutter menu, floating menu, and bubble menu",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./tiptap-editor": {
      "types": "./dist/tiptap-editor.d.ts",
      "default": "./dist/tiptap-editor.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "default": "./dist/components/*.js"
    },
    "./editor-context": {
      "types": "./dist/editor-context.d.ts",
      "default": "./dist/editor-context.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite demo",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:demo": "vite build --config vite.config.js",
    "preview": "vite preview"
  },
  "keywords": [
    "tiptap",
    "lit",
    "editor",
    "rich-text",
    "markdown",
    "wysiwyg",
    "typescript"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "lit": "^3.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@lit/context": "^1.1.6",
    "@tiptap/core": "^3.12.1",
    "@tiptap/extension-bubble-menu": "^3.12.1",
    "@tiptap/extension-code-block-lowlight": "^3.12.1",
    "@tiptap/extension-drag-handle": "^3.12.1",
    "@tiptap/extension-image": "^3.12.1",
    "@tiptap/extension-link": "^3.12.1",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/extension-table": "^3.12.1",
    "@tiptap/extension-table-cell": "^3.12.1",
    "@tiptap/extension-table-header": "^3.12.1",
    "@tiptap/extension-table-row": "^3.12.1",
    "@tiptap/markdown": "^3.13.0",
    "@tiptap/starter-kit": "^3.12.1",
    "@tiptap/suggestion": "^3.12.1",
    "highlight.js": "^11.9.0",
    "lowlight": "^3.3.0"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  }
}
